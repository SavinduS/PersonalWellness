<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Required for Android 13+ notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ✅ Optional but recommended: keep reminders working after reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalWellness"
        tools:targetApi="31">

        <!-- ✅ Onboarding is the app's launch activity -->
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Screen -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" />

        <!-- Signup Screen -->
        <activity
            android:name=".ui.SignupActivity"
            android:exported="true" />

        <!-- Main App Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- ✅ Hydration Alarm Receiver -->
        <receiver
            android:name=".receivers.HydrationReceiver"
            android:enabled="true"
            android:exported="false" />

    </application>
</manifest>
