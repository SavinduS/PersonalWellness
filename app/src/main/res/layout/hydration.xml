<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gradient Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="16dp"
            android:background="@drawable/header_gradient">

            <!-- Title + Subtitle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration Tracker"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay hydrated, stay healthy"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Profile -->
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="56dp"
                android:contentDescription="Profile" />

            <!-- Settings -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                android:layout_alignParentEnd="true"
                android:contentDescription="Settings" />
        </RelativeLayout>

        <!-- Reminder Interval Section -->
        <TextView
            android:id="@+id/tvReminderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Interval"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerReminderInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSetReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Set Reminder"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />

        <!-- Custom Amount Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Amount"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnDecrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€“"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250ml"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="24dp"/>

            <Button
                android:id="@+id/btnIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnAddCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="+ Add 250ml"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"/>

        <!-- Progress Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Progress"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/colorSecondary"/>

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="12dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:text="Reset Today's Data"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@android:color/white"/>

        <!-- Recent History -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent History"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:id="@+id/waterHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Placeholder -->
            <ImageView
                android:id="@+id/historyIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_water"
                android:tint="@color/colorTextSecondary"/>

            <TextView
                android:id="@+id/historyPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hydration data yet"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/historySubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start tracking your water intake"
                android:textSize="12sp"
                android:textColor="@color/colorTextSecondary"/>
        </LinearLayout>

        <!-- Hydration Tips -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydration Tips"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§ Drink a glass of water when you wake up"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° Set reminders every 2 hours during the day"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ Eat water-rich foods like fruits and vegetables"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸƒ Drink extra water before, during, and after exercise"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
