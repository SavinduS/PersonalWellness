<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Highlight color -->
    <solid android:color="@color/colorSecondary" />

    <!-- Replace with your theme accent color (green/blue) -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
